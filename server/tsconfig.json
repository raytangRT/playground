{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6", 
      "lib": ["es2016","dom"], 
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true, 
      "types": [
        "reflect-metadata"
      ]
  },
  "include" : [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}